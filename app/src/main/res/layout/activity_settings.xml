<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/rowPrivate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >
        <Switch
            android:id="@+id/privato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abilita modalita privata"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/setting_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rowPrivate"
        android:layout_centerInParent="true"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/setting_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_username"
        android:layout_centerInParent="true"
        android:textSize="9sp"
        />


</RelativeLayout>

